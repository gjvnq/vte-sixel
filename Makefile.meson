srcdir=@srcdir@
builddir=@builddir@
vte_gtk3_api_version = @vte_gtk3_api_version@
vte_gtk4_api_version = @vte_gtk4_api_version@

#

NTHREADS = 1
NJOBS = -j$(NTHREADS)
NINJA = ninja $(NJOBS)

#

all:
	$(NINJA)

check:
	MESON_TESTTHREADS=$(NTHREADS) $(NINJA) test

clean:
	$(NINJA) clean

coverage:
	$(NINJA) coverage

doc:
	$(NINJA) vte-$(vte_gtk3_api_version)-doc

install:
	$(NINJA) install

uninstall:
	$(NINJA) uninstall
